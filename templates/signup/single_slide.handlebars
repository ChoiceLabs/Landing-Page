<div class="row form-row">
  <div class="col-md-6 col-md-offset-3">

    <div class="survey_slide__header">
      <h2 class="survey_slide__header__title">{{heading}}</h2>
      <p class="survey_slide__header__caption">{{caption}}</p>
    </div>

    <form data-toggle="validator" role="form">

      <div class="question form-group">
        <label class="question_label">First Name</label>
        <input type="text" class="form-control" id="first-name-input" data-error="Please provide a first name" data-delay="0" required>
        <div class="help-block with-errors"></div>
      </div>

      <div class="question form-group">
        <label class="question_label">Last Name</label>
        <input type="text" class="form-control" id="last-name-input" data-error="Please provide a last name" required>
        <div class="help-block with-errors"></div>
      </div>


      <div class="question form-group">
        <label class="question_label">Phone Number</label>
        <input type="tel" class="form-control" id="phone-input" data-minlength="10" placeholder="(xxx) xxx-xxxx" data-error="Please provide a valid phone number" required>
        <div class="help-block with-errors"></div>
      </div>

      <div class="question form-group">
        <label class="question_label">Email</label>
        <input type="email" class="form-control" id="email-input" data-error="Please provide an email address" required>
        <div class="help-block with-errors"></div>

      </div>


      <div class="question form-group" id="desired-locations">
        <label class="question_label">I'd prefer to work:</label>
        <section>
        {{#each cities}}
          <label class="checkbox-item">
            <input type="checkbox" name="desired-locations"/> {{this}}
            <label></label>
          </label>
        {{/each}}
        </section>

        <div class="desired-locations-error"> Please provide at least one region </div>
      </div>


      <div class="question form-group">
        <label class="question_label">Per week, I am available to work:</label>
        <section>
        {{#each number-of-hours}}
          <label class="radio-item">
            <input type="radio" name="available-hours"/> {{this}}
          </label>
        {{/each}}
        </section>
      
        <div id="available-hours-error" class="help-block with-errors"></div>
      </div>


      <div class="question form-group">
        <label class="question_label">Do you have a valid driver's license?</label>
        <section>
          <label class="radio-item">
            <input type="radio" name="valid-license"/> Yes
          </label>
          <label class="radio-item">
            <input type="radio" name="valid-license"/> No
          </label>
        </section>
        <div id="valid-drivers-license-error" class="help-block with-errors"></div>
      </div>

      <div class="question form-group">
        <label class="question_label">Are you willing to do a background check?</label>
        <section>
          <label class="radio-item">
            <input type="radio" name="background-check"/> Yes
          </label>
          <label class="radio-item">
            <input type="radio" name="background-check"/> No
          </label>
        </section>
        <div id="background-check-error" class="help-block with-errors"></div>
      </div>


